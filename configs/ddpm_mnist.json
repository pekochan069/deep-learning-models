{
    "name": "ddpm_mnist",
    "dataset": "mnist",
    "validation": false,
    "batch_size": 128,
    "shuffle": true,
    "epochs": 100,
    "early_stopping": false,
    "early_stopping_monitor": "val_loss",
    "early_stopping_patience": 5,
    "early_stopping_min_delta": 0.02,
    "early_stopping_min_delta_strategy": "delta_proportional",
    "save_after_n_epoch": true,
    "save_after_n_epoch_period": 10,
    "show_plot": true,
    "save_plot": true,
    "model": "ddpm",
    "model_params": {
        "param_type": "ddpm",
        "max_T": 1000,
        "beta_1": 0.0001,
        "beta_T": 0.02,
        "cfg_unconditional_prob": 0.1,
        "base_unet_dim": 64,
        "t_emb_dim": 64,
        "long_skip_connection_type": "concat",
        "dropout": 0.1,
        "skip_reduce_ratio": 0.5,
        "gradient_clipping": true,
        "max_clip_norm": 5
    },
    "optimizer": "adamw",
    "optimizer_params": {
        "param_type": "adamw",
        "lr": 0.0001,
        "betas": [
            0.9,
            0.999
        ],
        "eps": 1e-08,
        "weight_decay": 0.01,
        "amsgrad": false,
        "maximize": false,
        "capturable": false,
        "differentiable": false
    },
    "loss_function": "mse"
}